{
  "manifest_version": 3,
  "name": "Cisco Questions Search Overlay",
  "version": "1.0",
  "description": "Transparent overlay to search Cisco exam questions with keyboard shortcut",
  "permissions": ["storage", "activeTab"],
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Toggle Cisco questions search overlay"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["extracted_questions.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
